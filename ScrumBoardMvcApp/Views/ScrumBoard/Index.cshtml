@*@model dynamic

@{
    Layout = null;
}
*@
<!DOCTYPE html>
<html>
<head>
    <link href="/Content/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/Content/css/scrumBoard.css" rel="stylesheet" type="text/css" />
    <title>title</title>
</head>
<body>
    <div data-ng-app="ScrumBoardApp" data-ng-controller="SkilzJs.controller.ListController">

        <button class="btn" ng-click="isDebugCollapsed = !isDebugCollapsed">
            SHOW DEBUG</button>
        <div collapse="isDebugCollapsed">
            <div class="well well-large">
                <pre>
                    $scope.isCreateListCollapsed = {{isCreateListCollapsed}}    
                    $scope.isDebugCollapsed = {{isDebugCollapsed}}    
                </pre>
            </div>
        </div>
        <button  class="btn" ng-click="isCreateListModalCollapsed = !isCreateListModalCollapsed">
            Show Toolbar</button>
        <div collapse="isCreateListModalCollapsed">
            <div class="well well-large ">
                <div data-ng-controller="SkilzJs.controller.CreateListDialogController">
                    <div class="row-fluid">
                        <button id="addNewListBtn" class="btn btn-primary" data-ng-click="openDialog()">Add New List</button>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <ul>
            <li data-ng-repeat="list in board.lists" class="listItem">
                <h1>
                    {{list.title}}</h1>
                <ul>
                    @*                    <li data-ng-repeat="card in list.cards">{{card.title}} </li>*@
                    <li data-ng-repeat="card in list.cards">
                        <div class="scrumCardListItem" card-title="{{card.title}}" data-ng-click="setCurrentCard(card)" >Unset Title</div>
                    </li>
                </ul>
                <div data-ng-controller="SkilzJs.controller.CreateCardDialogController" data-ng-click="openDialog(list.id)" >
                    @*                    <a data-ng-click="addDraftCard(list)">Add card...</a>*@                
                    Add a card...
                </div>
            </li>
        </ul>
    </div>
    <script src="/Scripts/External/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="/Scripts/External/underscore.js" type="text/javascript"></script>
    <script src="/Scripts/External/Angular/angular.js" type="text/javascript"></script>
    <script src="/Scripts/External/Bootstrap/bootstrap.js" type="text/javascript"></script>
    <script src="/Scripts/External/Angular-Bootstrap/ui-bootstrap-tpls-0.2.0.js" type="text/javascript"></script>
    <script src="/Scripts/External/SignalR/jquery.signalR-1.0.1.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>

    <script src="/Scripts/Shared/global.js" type="text/javascript"></script>
    <script src="/Scripts/models.js" type="text/javascript"></script>
    <script src="/Scripts/scrumBoardApp.js" type="text/javascript"></script>
    <script src="/Scripts/scrumBoardFactories.js" type="text/javascript"></script>
    <script src="/Scripts/scrumBoardDirectives.js" type="text/javascript"></script>
    <script src="/Scripts/shared/dialogs/SimpleEnterStringDialogController.js" type="text/javascript"></script>
    <script src="/Scripts/Sockets/socketController.js" type="text/javascript"></script>
    <script src="/Scripts/listController.js" type="text/javascript"></script>
    <script src="/Scripts/CreateListDialogController.js" type="text/javascript"></script>
    <script src="/Scripts/CreateCardDialogController.js" type="text/javascript"></script>

</body>
</html>
